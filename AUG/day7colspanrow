    <table>
        <tr>
            <th rowspan="2">Header 1</th>
            <th colspan="2">Header 2</th>
        </tr>
        <tr>
            <td>Subheader 1</td>
            <td>Subheader 2</td>
        </tr>
        <tr>
            <td colspan="2">Cell spanning 2 columns</td>
            <td>Cell 3</td>
        </tr>
    </table>
